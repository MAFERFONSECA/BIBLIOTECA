<Window x:Class="BIBLIOTECA_UAdeO.FORMULARIOS.CONFIRMARDEVOLUCION"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIBLIOTECA_UAdeO.FORMULARIOS"
        mc:Ignorable="d"
        Title="Préstamos - Confirmar Devolución"         
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="BIBLIOTECARIO_GRID" ImageSource="/FORMULARIOS/IMAGENES/BIBLIOTECARIO (2).png"/>
        </Grid.Background>
        <DataGrid x:Name="DATAGRIDDEVOLVER" Margin="118,229,118,151" FontSize="16"/>
        <Button x:Name="BTNSALIR" Margin="1041,582,63,24" Click="BTNSALIR_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/SALIR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="SALIR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNCONFIRMARDEVOLUCION" Margin="459,582,447,31" Click="BTNCONFIRMARDEVOLUCION_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/GUARDAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="CONFIRMAR DEVOLUCION"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="TXTBUSCAR" HorizontalAlignment="Center" Margin="0,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="572" Height="31" TextChanged="TXTBUSCAR_TextChanged" FontSize="22" />
        <Label Content="Buscar:" HorizontalAlignment="Left" Margin="233,169,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.005,0.41" FontSize="22"/>
    </Grid>
</Window>
