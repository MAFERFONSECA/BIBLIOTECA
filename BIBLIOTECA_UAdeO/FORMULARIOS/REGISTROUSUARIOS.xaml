<Window x:Class="BIBLIOTECA_UAdeO.FORMULARIOS.REGISTROUSUARIOS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIBLIOTECA_UAdeO.FORMULARIOS"
        mc:Ignorable="d"
        Title="REGISTROUSUARIOS"        
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FORMULARIOS/IMAGENES/BIBLIOTECARIO (2).png"/>
        </Grid.Background>
        <TextBox x:Name="TXTIDRUSUARIO" PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Left" Margin="301,238,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="150" KeyDown="TXTIDRUSUARIO_KeyDown" FontSize="22"/>
        <TextBox x:Name="TXTNOMBRERUSUARIO" HorizontalAlignment="Left" Margin="301,296,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="343" MaxLength="40" FontSize="22"/>
        <Label x:Name="IDRUSUARIO" Content="ID:" HorizontalAlignment="Left" Margin="244,230,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <Label x:Name="NOMBRERUSUARIO" Content="Nombre:" HorizontalAlignment="Left" Margin="184,291,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <Label x:Name="APATERNORUSUARIO" Content="Apellido Paterno:" HorizontalAlignment="Left" Margin="96,335,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <Label x:Name="TIPORUSUARIO" Content="Tipo:" HorizontalAlignment="Left" Margin="842,236,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <Label x:Name="CONTRASEÑARUSUARIO" Content="Contraseña:" HorizontalAlignment="Left" Margin="775,308,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <ComboBox x:Name="CMBTIPORUSUARIO" HorizontalAlignment="Left" Margin="916,238,0,0" VerticalAlignment="Top" Width="261" SelectionChanged="CMBTIPORUSUARIO_SelectionChanged" FontSize="22"/>
        <Label x:Name="LBLREGISTROUSUARIO" Content="REGISTRO DE USUARIOS" HorizontalAlignment="Left" Margin="454,149,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="64" Width="456" FontSize="36"/>
        <Button x:Name="BTNGUARDARUSUARIO" Margin="143,517,916,100" Click="BTNGUARDARUSUARIO_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/GUARDAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="GUARDAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNBUSCARUSUARIO" Margin="572,517,488,100" Click="BTNBUSCARUSUARIO_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/BUSCAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="BUSCAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNSALIR" Margin="956,517,103,100" Click="BTNSALIR_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/SALIR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="SALIR"/>
            </StackPanel>
        </Button>
        <TextBox x:Name="TXTAPATERNORUSUARIO" HorizontalAlignment="Left" Margin="300,345,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="344" MaxLength="20" FontSize="22" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.001"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="TXTAMATERNORUSUARIO" HorizontalAlignment="Left" Margin="301,398,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="343" MaxLength="20" FontSize="22"/>
        <Label x:Name="AMATERMORUSUARIO" Content="Apellido Materno:" HorizontalAlignment="Left" Margin="91,390,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <TextBox x:Name="TXTCONTRASEÑARUSUARIO" HorizontalAlignment="Left" Margin="913,315,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="264" MaxLength="10" FontSize="22"/>

    </Grid>
</Window>
