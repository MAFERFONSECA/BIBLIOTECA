<Window x:Class="BIBLIOTECA_UAdeO.FORMULARIOS.REGISTROGENEROS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIBLIOTECA_UAdeO.FORMULARIOS"
        mc:Ignorable="d"
        Title="REGISTROGENEROS"         
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FORMULARIOS/IMAGENES/BIBLIOTECARIO (2).png"/>
        </Grid.Background>
        <TextBox x:Name="TXT_ID_GENERO" PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Left" Margin="540,234,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="170" KeyDown="TXT_ID_GENERO_KeyDown" Height="39" FontSize="22"/>
        <TextBox x:Name="TXT_NOMBRE_GENERO" HorizontalAlignment="Left" Margin="540,314,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="354" MaxLength="20" Height="38" FontSize="22"/>
        <Label x:Name="LBLREGISTROGENERO" Content="REGISTRO DE GENÉROS&#xD;&#xA;" HorizontalAlignment="Left" Margin="476,143,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="86" Width="467" FontSize="36"/>
        <Label x:Name="NOMBREGENERO" Content="Género:" HorizontalAlignment="Left" Margin="432,308,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="44" Width="132" FontSize="22"/>
        <Label x:Name="IDGENERO" Content="ID:" HorizontalAlignment="Left" Margin="487,234,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="45" Width="48" FontSize="22"/>
        <Button x:Name="BTNGUARDARGENERO"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="BTNGUARDARGENERO_Click" Margin="100,503,984,121">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/GUARDAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="GUARDAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNELIMINARGENERO" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="BTNELIMINARGENERO_Click" Margin="380,503,700,121">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/ELIMINAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="ELIMINAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNBUSCARGENERO"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="BTNBUSCARGENERO_Click" Margin="694,503,386,121">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/BUSCAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="BUSCAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNSALIR" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="BTNSALIR_Click" Margin="970,503,110,121">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/SALIR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="SALIR"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
