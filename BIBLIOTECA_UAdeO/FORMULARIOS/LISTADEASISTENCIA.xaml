<Window x:Class="BIBLIOTECA_UAdeO.FORMULARIOS.LISTADEASISTENCIA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIBLIOTECA_UAdeO.FORMULARIOS"
        mc:Ignorable="d"
        Title="LISTADEASISTENCIA"        
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FORMULARIOS/IMAGENES/BIBLIOTECARIO (2).png"/>
        </Grid.Background>
        <DataGrid x:Name="miDataGrid" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="72,239,118,96" FontSize="16"/>
        <TextBox x:Name="TXTBUSCAR" HorizontalAlignment="Center" Margin="0,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="572" Height="31" TextChanged="TXTBUSCAR_TextChanged" FontSize="22" />
        <Label Content="Buscar:" HorizontalAlignment="Left" Margin="233,169,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.005,0.41" FontSize="22"/>
        <Button x:Name="BTNSALIR" Margin="1096,613,49,16" Click="BTNSALIR_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/SALIR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="SALIR"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
