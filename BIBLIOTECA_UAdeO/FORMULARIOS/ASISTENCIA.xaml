<Window x:Class="BIBLIOTECA_UAdeO.FORMULARIOS.ASISTENCIA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIBLIOTECA_UAdeO.FORMULARIOS"
        mc:Ignorable="d"
        Title="ASISTENCIA"  
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FORMULARIOS/IMAGENES/FONDOASISTENCIA.png"/>
        </Grid.Background>
        <TextBox x:Name="TXTID" HorizontalAlignment="Left" Margin="578,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="29" TextChanged="TXTID_TextChanged" FontSize="22"/>
        <TextBox x:Name="TXTNOMBRE" HorizontalAlignment="Left" Margin="578,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" Height="33" FontSize="22"/>
        <Label x:Name="LBLIDLOGIN" Content="ID:" HorizontalAlignment="Left" Margin="529,308,0,0" VerticalAlignment="Top" Width="54" FontWeight="Bold" FontStyle="Italic" FontSize="22" Foreground="White" FontFamily="Arial Black" RenderTransformOrigin="0.441,-0.267"/>
        <Label x:Name="LBLNOMBRELOGIN" Content="NOMBRE:" HorizontalAlignment="Left" Margin="449,372,0,0" VerticalAlignment="Top" Width="124" FontWeight="Bold" FontStyle="Italic" FontSize="22" Foreground="White" FontFamily="Arial Black"/>
        <Button x:Name="BTNASISTENCIA" Content="ENTRAR" HorizontalAlignment="Center" Margin="0,484,0,0" VerticalAlignment="Top" Height="48" Width="224" FontWeight="Bold" FontStyle="Italic" Background="White" Click="BTNASISTENCIA_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="16" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#FFD3D3D3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="BTNSALIR" Margin="1068,574,66,59" Click="BTNSALIR_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/SALIR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="SALIR"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
