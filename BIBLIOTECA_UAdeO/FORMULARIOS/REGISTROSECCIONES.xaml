<Window x:Class="BIBLIOTECA_UAdeO.FORMULARIOS.REGISTROSECCIONES"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIBLIOTECA_UAdeO.FORMULARIOS"
        mc:Ignorable="d"
        Title="REGISTROSECCIONES"  
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FORMULARIOS/IMAGENES/BIBLIOTECARIO (2).png"/>
        </Grid.Background>
        <TextBox x:Name="TXTIDSECCION" PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Left" Margin="516,258,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="136" KeyDown="TXTIDSECCION_KeyDown" FontSize="22" RenderTransformOrigin="0.668,0.881"/>
        <TextBox x:Name="TXTNOMBRESECCION" HorizontalAlignment="Left" Margin="515,328,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="357" MaxLength="20" FontSize="22"/>
        <Label x:Name="LBLREGISTROSECCIONES" Content="REGISTRO DE SECCIÓNES&#xD;&#xA;" HorizontalAlignment="Left" Margin="432,153,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="58" Width="440" FontSize="36"/>
        <Label x:Name="NOMBRESECCION" Content="Sección:" HorizontalAlignment="Left" Margin="406,320,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22" RenderTransformOrigin="0.485,1.483"/>
        <Label x:Name="IDSECCION" Content="ID:" HorizontalAlignment="Left" Margin="459,250,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22" RenderTransformOrigin="0.512,-0.199"/>
        <Button x:Name="BTNGUARDARSECCION"  Margin="75,499,984,118" Click="BTNGUARDARSECCION_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/GUARDAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="GUARDAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNELIMINARSECCION"  Margin="348,499,710,118" Click="BTNELIMINARSECCION_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/ELIMINAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="ELIMINAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNBUSCARSECCION" Margin="640,501,419,116" Click="BTNBUSCARSECCION_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/BUSCAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="BUSCAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNSALIR"  Margin="898,499,161,118" Click="BTNSALIR_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/SALIR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="SALIR"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
