<Window x:Class="BIBLIOTECA_UAdeO.FORMULARIOS.REGISTROLIBROS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIBLIOTECA_UAdeO.FORMULARIOS"
        mc:Ignorable="d"
        Title="REGISTROLIBROS"  
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/FORMULARIOS/IMAGENES/BIBLIOTECARIO (2).png"/>
        </Grid.Background>
        <TextBox x:Name="TXT_ID_LIBRO" PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Left" Margin="215,237,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="98" FontSize="22" KeyDown="TXT_ID_LIBRO_KeyDown"/>
        <TextBox x:Name="TXT_TITULO_LIBRO" HorizontalAlignment="Left" Margin="215,281,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="261" FontSize="22" MaxLength="100"/>
        <Label x:Name="IDLIBRO" Content="ID:" HorizontalAlignment="Left" Margin="157,233,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.861,0.528" FontSize="22"/>
        <Label x:Name="TITULOLIBRO" Content="Título:" HorizontalAlignment="Left" Margin="126,278,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <Label x:Name="ANOPUBLICACIONLIBRO" Content="Año publicación:" HorizontalAlignment="Left" Margin="27,317,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <Label x:Name="AUTORLIBRO" Content="Autor:" HorizontalAlignment="Left" Margin="678,193,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="-0.184,1.346" FontSize="22"/>
        <Label x:Name="EDITORIALLIBRO" Content="Editorial:" HorizontalAlignment="Left" Margin="105,363,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22" RenderTransformOrigin="1.188,3.042"/>
        <Label x:Name="GENEROLIBRO" Content="Género:" HorizontalAlignment="Left" Margin="1055,189,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <Label x:Name="SECCIONLIBRO" Content="Sección:" HorizontalAlignment="Left" Margin="101,413,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <TextBox x:Name="TXT_APUBLICACION" HorizontalAlignment="Left" Margin="215,321,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="261" FontSize="22" RenderTransformOrigin="0.977,3.392" MaxLength="4"/>
        <ComboBox x:Name="CMBX_EDITORIAL" HorizontalAlignment="Left" Margin="215,363,0,0" VerticalAlignment="Top" Width="261" FontSize="22"/>
        <ComboBox x:Name="CMBX_SECCION" HorizontalAlignment="Left" Margin="215,415,0,0" VerticalAlignment="Top" Width="261" FontSize="22"/>
        <Label x:Name="REGISTROLIBRO" Content="REGISTRO DE LIBROS" HorizontalAlignment="Center" Margin="0,152,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" Height="36" Width="300" FontSize="24"/>
        <Button x:Name="BTN_GUARDAR_LIBRO" Margin="177,543,882,74" Click="BTN_GUARDAR_LIBRO_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/GUARDAR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="GUARDAR"/>
            </StackPanel>
        </Button>
        <Button x:Name="BTNSALIR1" Margin="932,543,127,74" Click="BTNSALIR1_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/FORMULARIOS/IMAGENES/SALIR.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="SALIR"/>
            </StackPanel>
        </Button>


        <Label x:Name="CANTIDADLIBRO" Content="Cantidad:" HorizontalAlignment="Left" Margin="978,100,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22"/>
        <TextBox x:Name="TXT_CANTIDAD" HorizontalAlignment="Left" Margin="1088,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="28" Text="0" IsReadOnly="True" TextAlignment="Center" FontSize="22" RenderTransformOrigin="0.478,-0.064"/>

        <ScrollBar x:Name="ELEGIRCANTIDAD" Orientation="Vertical" Width="20" Minimum="0" Maximum="20" SmallChange="1" LargeChange="10"
         HorizontalAlignment="Left" Margin="1136,106,0,0" VerticalAlignment="Top" Value="{Binding Text, ElementName=TXT_CANTIDAD, Mode=TwoWay}" Height="28" RenderTransformOrigin="0.305,1.052">
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-179.984"/>
                    <TranslateTransform X="7.804" Y="-30.911"/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <Label x:Name="BUSCARAUTOR" Content="Buscar:&#xD;&#xA;" HorizontalAlignment="Left" Margin="498,227,0,0" VerticalAlignment="Top" Height="51" RenderTransformOrigin="0.794,0.479" FontSize="22"/>
        <TextBox x:Name="TXT_BUSCAR_AUTOR" HorizontalAlignment="Left" Margin="598,237,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Height="31" FontSize="22" TextChanged="TXT_BUSCAR_AUTOR_TextChanged"/>
        <Label x:Name="BUSCARGENERO" Content="Buscar:" HorizontalAlignment="Left" Margin="855,229,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="TXT_BUSCAR_GENERO" HorizontalAlignment="Left" Margin="973,233,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="254" FontSize="22" TextChanged="TXT_BUSCAR_GENERO_TextChanged"/>
        <DataGrid x:Name="DATAGRID_AUTORES" Margin="550,297,431,228" FontSize="16" SelectedCellsChanged="DATAGRID_AUTORES_SelectedCellsChanged" />
        <DataGrid x:Name="DATAGRID_GENEROS" Margin="932,298,59,228" FontSize="16" SelectedCellsChanged="DATAGRID_GENEROS_SelectedCellsChanged"/>
        <Image Source="/FORMULARIOS/IMAGENES/BUSCAR.png" Margin="437,532,761,85"/>
        <ComboBox x:Name="CMBX_FILTROSBUSQUEDA" HorizontalAlignment="Left" Margin="550,573,0,0" VerticalAlignment="Top" Width="299" Height="44" FontSize="24">
            <ComboBoxItem x:Name="CBXI_TITULO" Content="Solo por título" Selected="CBXI_TITULO_Selected"/>
            <ComboBoxItem x:Name="CBXI_AUTOR" Content="Por autor" Selected="CBXI_AUTOR_Selected"/>
            <ComboBoxItem x:Name="CBXI_GENERO" Content="Por género" Selected="CBXI_GENERO_Selected"/>
        </ComboBox>
        <Label Content="Buscar por..." HorizontalAlignment="Left" Margin="631,526,0,0" VerticalAlignment="Top" FontSize="24"/>
    </Grid>
</Window>
